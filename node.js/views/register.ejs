         // 以 urlencoded 的格式送出
         fetch('', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded'
            },
            body: new URLSearchParams(fd).toString(),
        }).then(r=>r.json()).then(obj=>{
            console.log(JSON.stringify(obj, null, 4));
            if(obj.success){
                location.href ='/address-book/list';
            } else {
                alert('資料無法新增成功\n' + (obj.error || ''));
            }
        });
